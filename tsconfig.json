{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "target": "es5",
    "declaration": true,
    "lib": ["es5", "es6", "dom"]
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
