{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "target": "es5",
    "declaration": true,
    "lib": ["esnext", "dom"],
    "typeRoots": [
      "./node_modules/@types",
    ],
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ]
}
